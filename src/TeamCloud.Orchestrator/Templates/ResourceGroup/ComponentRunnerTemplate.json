{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentResourceId": {
      "type": "string"
    },
    "environmentTemplateFolder": {
      "type": "string"
    },
    "environmentTemplateRepository": {
      "type": "string"
    },
    "environmentTemplateRevision": {
      "type": "string",
      "defaultValue": ""
    },
    "environmentTemplateParameters": {
      "type": "object",
      "defaultValue": {}
    },

    "deploymentId": {
      "type": "string"
    },
    "deploymentRunner": {
      "type": "string"
    },
    "deploymentIdentity": {
      "type": "string"
    }
  },
  "variables": {
    "deploymentHost": "[concat(parameters('deploymentId'), '.', toLower(replace(resourceGroup().location, ' ', '')), '.azurecontainer.io')]",
    "environmentSegments": "[split(parameters('environmentResourceId'), '/')]"
  },
  "resources": [
    {
      "name": "[parameters('deploymentId')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[parameters('deploymentIdentity')]": {}
        }
      },
      "properties": {
        "containers": [
          {
            "name": "runner",
            "properties": {
              "command": [],
              "image": "[parameters('deploymentRunner')]",
              "ports": [
                {
                  "port": 80
                },
                {
                  "port": 443
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 1
                }
              },
              "environmentVariables": [
                {
                  "name": "DeploymentId",
                  "value": "[guid(parameters('environmentResourceId'))]"
                },
                {
                  "name": "DeploymentHost",
                  "value": "[variables('deploymentHost')]"
                },
                {
                  "name": "environmentResourceId",
                  "value": "[parameters('environmentResourceId')]"
                },
                {
                  "name": "EnvironmentLocation",
                  "value": "[resourceGroup().location]"
                },
                {
                  "name": "EnvironmentTemplateBaseUrl",
                  "value": "[uri(concat('http://', variables('deploymentHost')), if (startsWith(parameters('environmentTemplateFolder'), '/'), skip(parameters('environmentTemplateFolder'), 1), parameters('environmentTemplateFolder')))]"
                },
                {
                  "name": "EnvironmentTemplateToken",
                  "value": "[uniqueString(resourceId('Microsoft.ContainerInstance/containerGroups', guid(parameters('environmentResourceId'))))]"
                },
                {
                  "name": "EnvironmentTemplateFolder",
                  "value": "[uri('file:///mnt/templates/root/', if (startsWith(parameters('environmentTemplateFolder'), '/'), skip(parameters('environmentTemplateFolder'), 1), parameters('environmentTemplateFolder')))]"
                },
                {
                  "name": "EnvironmentTemplateParameters",
                  "value": "[string(parameters('environmentTemplateParameters'))]"
                },
                {
                  "name": "EnvironmentResourceGroup",
                  "value": "[if(greaterOrEquals(length(variables('environmentSegments')),5), variables('environmentSegments')[4], '')]"
                },
                {
                  "name": "EnvironmentSubscription",
                  "value": "[if(greaterOrEquals(length(variables('environmentSegments')),3), variables('environmentSegments')[2], '')]"
                }
              ],
              "volumeMounts": [
                {
                  "name": "templates",
                  "mountPath": "/mnt/templates",
                  "readOnly": false
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Never",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[parameters('deploymentId')]",
          "ports": [
            {
              "protocol": "tcp",
              "port": 80
            },
            {
              "protocol": "tcp",
              "port": 443
            }
          ]
        },
        "volumes": [
          {

            "name": "templates",
            "gitRepo": {
              "directory": "root",
              "repository": "[parameters('environmentTemplateRepository')]",
              "revision": "[parameters('environmentTemplateRevision')]"
            }
          }
        ]
      }
    }
  ],
  "outputs":{
    "runnerId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ContainerInstance/containerGroups', parameters('deploymentId'))]"
    }
  }
}
